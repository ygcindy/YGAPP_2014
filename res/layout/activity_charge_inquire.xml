<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="100dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChargeInquire" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a simple tool that helps you to inquire charge." />

    <TextView
        android:id="@+id/tv_jni_add_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp"
        android:text="查询号码" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_jni_add_result"
        android:layout_marginTop="21dp"
        android:text="查询指令" />

    <EditText
        android:id="@+id/editText_inquire_charge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_jni_add_result"
        android:layout_alignBottom="@+id/tv_jni_add_result"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tv_jni_add_result"
        android:ems="10"
        android:hint="10086"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_inquire_charge_cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_inquire_charge_number"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:hint="YECX" />

    <Button
        android:id="@+id/btn_inquire_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_inquire_charge_cmd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:minWidth="100dp"
        android:text="查询" />

    <TextView
        android:id="@+id/textView_recent_inquire_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/btn_inquire_charge"
        android:layout_marginTop="26dp"
        android:text="" />

    <TextView
        android:id="@+id/textView_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_recent_inquire_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="#ff0000" />

</RelativeLayout>