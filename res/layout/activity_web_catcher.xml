<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WebCatcher" >

    <EditText
        android:id="@+id/editText_webcatcher_url"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:gravity="center_vertical|left|top"
        android:inputType="textMultiLine"
        android:text="http://www.52rd.com" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txt_web_catcher_storage_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_webcatcher_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="456789" />

    <Button
        android:id="@+id/btn_web_catcher_file_explorer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_web_catcher_storage_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="file explorer" />

    <Button
        android:id="@+id/btn_webcatcher_catch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_web_catcher_file_explorer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Catch" />

    <Button
        android:id="@+id/btn_web_catcher_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_web_catcher_file_explorer"
        android:layout_alignBottom="@+id/btn_web_catcher_file_explorer"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_web_catcher_file_explorer"
        android:text="Gallery" />

    <Button
        android:id="@+id/btn_web_catcher_url_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editText_webcatcher_url"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/editText_webcatcher_url"
        android:text="File" />

</RelativeLayout>
